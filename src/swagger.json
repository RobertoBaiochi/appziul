{
    "openapi": "3.0.0",
    "info": {
        "title": "Api App Ziul",
        "description": "Api criada para possível projeto",
        "contact": {
            "name": "Support",
            "email": "robertombbaiochi@gmail.com"
        },
        "version": "0.1.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333",
            "description": "Servidor local"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "CreateUser": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Digite seu nome",
                        "example": "Fernando"
                    },
                    "email": {
                        "type": "string",
                        "description": "Digite seu e-mail",
                        "example": "@email.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "Digite uma senha"
                    }
                }
            },
            "ResponseCreateUser": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "description": "Digite seu e-mail de login"
                    },
                    "name": {
                        "type": "string",
                        "description": "Seu nome"
                    }
                }
            },
            "LoginUser": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "O e-mail que você criou",
                        "example": "@email.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "Digite sua senha"
                    }
                }
            },
            "ResponseLoginUser": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string",
                        "description": "Copie seu token para autorizar o acesso das outras rotas"
                    }
                }
            },
            "ResponseVerifyToken": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "RequireClient": {
                "type": "object",
                "properties": {
                    "name_client": {
                        "type": "string",
                        "description": "Digite o nome do seu cliente",
                        "example": "Fernando"
                    },
                    "address": {
                        "type": "string",
                        "description": "Digite o endereço do cliente",
                        "example": "Rua , 5"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Digite o telefone do cliente",
                        "example": "(21) 93451-2345"
                    }
                }
            },
            "ResponseCreateClient": {
                "type": "object",
                "properties": {
                    "name_client": {
                        "type": "string"
                    },
                    "address": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    }
                }
            },
            "ResponseClients": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name_client": {
                        "type": "string"
                    },
                    "address": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "visits": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "budget": {
                                    "type": "string"
                                },
                                "approved": {
                                    "type": "boolean"
                                },
                                "created_at": {
                                    "type": "string"
                                },
                                "updated_at": {
                                    "type": "string"
                                },
                                "client_id": {
                                    "type": "string"
                                },
                                "scheduled_date": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "RequireVisit": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string",
                        "description": "Descrição do trabalho",
                        "example": "Trocar fiação da cozinha"
                    },
                    "budget": {
                        "type": "string",
                        "description": "Valor do orçamento",
                        "example": "500"
                    },
                    "scheduled_date": {
                        "type": "string",
                        "description": "Data da visita",
                        "example": "13/10"
                    },
                    "cliente_id": {
                        "type": "string",
                        "description": "ID do cliente"
                    }
                }
            },
            "ResponseVisit": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "approved": {
                        "type": "boolean"
                    },
                    "budget": {
                        "type": "string"
                    },
                    "scheduled_date": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "client_id": {
                        "type": "string"
                    },
                    "client": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "name_client": {
                                "type": "string"
                            },
                            "address": {
                                "type": "string"
                            },
                            "phone": {
                                "type": "string"
                            },
                            "created_at": {
                                "type": "string"
                            },
                            "updated_at": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "security": [
            {
                "bearerAuth": []
            }
        ]
    },
    "paths": {
        "/user": {
            "post": {
                "tags": ["Usuário"],
                "summary": "Criar um usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseCreateUser"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Esse usuário já está sendo utilizado"
                    }
                }
            }
        },
        "/session": {
            "post": {
                "tags": ["Usuário"],
                "summary": "Verificação de usuário criado",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login feito com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseLoginUser"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "E-mail ou senha inválido"
                    }
                }
            }
        },
        "/me": {
            "get": {
                "tags": ["Usuário"],
                "summary": "Validação do Token",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Token Validado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVerifyToken"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token Inválido"
                    }
                }
            }
        },
        "/client": {
            "post": {
                "tags": ["Cliente"],
                "summary": "Criar um novo cliente",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequireClient"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login feito com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseCreateClient"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Todos os campos devem ser preenchidos"
                    },
                    "422": {
                        "description": "Cliente já existe"
                    }
                }
            },
            "get": {
                "tags": ["Cliente"],
                "summary": "Listar todos os clientes",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Todos os clientes encontrados",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseClients"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/client/{id}": {
            "put": {
                "tags": ["Cliente"],
                "summary": "Alterar dados do cliente por ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequireClient"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Alteração feita com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseCreateClient"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "O cliente não existe"
                    },
                    "400": {
                        "description": "Todos os campos devem ser preenchidos"
                    }
                }
            },
            "get": {
                "tags": ["Cliente"],
                "summary": "Listar um único cliente por ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cliente encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseClients"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Todos os compos devem ser preenchidos"
                    },
                    "422": {
                        "description": "Cliente já existe"
                    }
                }
            },
            "delete": {
                "tags": ["Cliente"],
                "summary": "Deletar o cliente por ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login feito com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseCreateClient"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "O cliente não existe"
                    }
                }
            }
        },
        "/visit": {
            "post": {
                "tags": ["Visita"],
                "summary": "Adicionar uma vista ao cliente",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequireVisit"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Visita criada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVisit"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Todos os campos devem ser preenchidos"
                    }
                }
            },
            "get": {
                "tags": ["Visita"],
                "summary": "Listar todas as visitas",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Todos os clientes encontrados",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVisit"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/visit/{id}": {
            "put": {
                "tags": ["Visita"],
                "summary": "Alterar dados da visita por ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequireVisit"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Alteração feita com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVisit"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "A visita não existe"
                    },
                    "400": {
                        "description": "Todos os campos devem ser preenchidos"
                    }
                }
            },
            "get": {
                "tags": ["Visita"],
                "summary": "Listar uma única visita por ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Visita encontrada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVisit"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "A visita não existe"
                    }
                }
            },
            "delete": {
                "tags": ["Visita"],
                "summary": "Deletar a visita por ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Vista deletada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVisit"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "A visita não existe"
                    }
                }
            }
        },
        "/work/approved": {
            "put": {
                "tags": ["Trabalho"],
                "summary": "Atualiza status de orçamento para aprovação do trabalho",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequireVisit"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Visita criada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVisit"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Todos os campos devem ser preenchidos"
                    }
                }
            }
        },
        "/work": {
            "post": {
                "tags": ["Trabalho"],
                "summary": "Adicionar uma vista ao cliente",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequireVisit"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Visita criada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVisit"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Todos os campos devem ser preenchidos"
                    }
                }
            },
            "get": {
                "tags": ["Trabalho"],
                "summary": "Listar todas as visitas",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Todos os clientes encontrados",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVisit"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
