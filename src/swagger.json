{
    "openapi": "3.0.0",
    "info": {
        "title": "Api App Ziul",
        "description": "Api criada para possível projeto",
        "contact": {
            "name": "Suporte",
            "email": "robertombbaiochi@gmail.com"
        },
        "version": "0.1.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333",
            "description": "Servidor local"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "CreateUser": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Digite seu nome",
                        "example": "Fernando"
                    },
                    "email": {
                        "type": "string",
                        "description": "Digite seu e-mail",
                        "example": "@email.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "Digite uma senha"
                    }
                }
            },
            "ResponseCreateUser": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "description": "Digite seu e-mail de login"
                    },
                    "name": {
                        "type": "string",
                        "description": "Seu nome"
                    }
                }
            },
            "LoginUser": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "O e-mail que você criou",
                        "example": "@email.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "Digite sua senha"
                    }
                }
            },
            "ResponseLoginUser": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string",
                        "description": "Copie seu token para autorizar o acesso das outras rotas"
                    }
                }
            },
            "ResponseVerifyToken": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/user": {
            "post": {
                "tags": ["Usuário"],
                "summary": "Criar um usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseCreateUser"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Esse usuário já está sendo utilizado"
                    }
                }
            }
        },
        "/session": {
            "post": {
                "tags": ["Usuário"],
                "summary": "Verificação de usuário criado",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login feito com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseLoginUser"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "E-mail ou senha inválido"
                    }
                }
            }
        },
        "/me": {
            "get": {
                "tags": ["Usuário"],
                "summary": "Validação do Token",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Token Validado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseVerifyToken"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token Inválido"
                    }
                }
            }
        }
    }
}
